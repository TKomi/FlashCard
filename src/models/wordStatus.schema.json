{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "単語学習状況",
  "properties": {
    "word": {
      "type": "string",
      "description": "英単語スペル"
    },
    "lastLearnedDate": {
      "type": "string",
      "format": "date-time",
      "description": "最後に学習した日時"
    },
    "answerHistory": {
      "type": "array",
      "items": {
        "type": "boolean"
      },
      "description": "過去の回答履歴 (正解:true, 不正解:false)"
    },
    "status": {
      "type": "number",
      "description": "単語の状態 (0:未学習, 1:苦手, 2:うろ覚え, 3:覚えた)"
    }
  },
  "required": ["word", "lastLearnedDate", "answerHistory", "status"]
}
